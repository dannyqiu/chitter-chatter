<interface>
    <object id="window" class="GtkWindow">
        <property name="visible">True</property>
        <property name="title">Chitter-Chatter</property>
        <property name="default-width">200</property>
        <property name="default-height">120</property>
        <property name="border-width">10</property>
        <signal name="delete-event" handler="on_delete_event"/>
        <signal name="destroy" handler="gtk_main_quit"/>
        <child>
            <object id="grid" class="GtkGrid">
                <property name="visible">True</property>
                <property name="expand">True</properyt>
                <property name="column-spacing">1</property>
                <property name="row-spacing">1</property>
                <child>
                    <object id="name" class="GtkEntry">
                        <property name="visible">True</property>
                        <property name="width-chars">10</property>
                        <property name="max-width-chars">50</property>
                        <signal name="key-release-event" handler="key_event"/>
                    </object>
                    <packing>
                        <property name="left-attach">0</property>
                        <property name="top-attach">0</property>
                    </packing>
                 </child>
                 <child>
                    <object id="enter" class="GtkButton">
                        <property name="visible">True</property>
                        <property name="expand">True</property>
                        <property name="label">Enter</property>
                    </object>
                    <packing>
                        <property name="left-attach">1</property>
                        <property name="top-attach">0</property>
                    </packing>
                 </child>
            </object>
        </child>
    </object>
</interface>